<table class="schedule">
  <thead>
    <tr>
      <td></td>
      {{#each}}
        <th>
          {{#link-to 'person' this classNames='button'}}
            {{name}}
          {{/link-to}}
        </th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#each rounds}}
      <tr {{bind-attr class='isCurrent'}}>
        <th>{{localized-date startsOn}}</th>
        {{#each assignments}}
          <td {{bind-attr class="isLast"}}>
            {{#link-to 'person.assignment' person this}}
              {{#if duty.iconUrl}}
                <img {{bind-attr src=duty.iconUrl}} />
              {{else}}
                {{duty.name}}
              {{/if}}
            {{/link-to}}
          </td>
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>